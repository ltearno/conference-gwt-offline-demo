<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
	<persistence-unit name="offlinedemo">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.lteconsulting.offlinedemo.server.entities.Article</class>
		<class>com.lteconsulting.offlinedemo.server.entities.Order</class>
		<class>com.lteconsulting.offlinedemo.server.entities.OrderItem</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="javax.persistence.validation.mode" value="none"/>
				
			<property name="hibernate.archive.autodetection" value="class, hbm" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/offlinedemo" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
<!-- 			<property name="hibernate.c3p0.min_size" value="5" /> -->
<!-- 			<property name="hibernate.c3p0.max_size" value="20" /> -->
<!-- 			<property name="hibernate.c3p0.timeout" value="300" /> -->
<!-- 			<property name="hibernate.c3p0.max_statements" value="50" /> -->
<!-- 			<property name="hibernate.c3p0.idle_test_period" value="3000" /> -->
			<property name="hibernate.connection.zeroDateTimeBehavior" value="convertToNull" />
		</properties>
	</persistence-unit>
</persistence>